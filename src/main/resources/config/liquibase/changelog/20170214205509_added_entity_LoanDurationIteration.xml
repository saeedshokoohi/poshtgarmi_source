<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity LoanDurationIteration.
    -->
    <changeSet id="20170214205509-1" author="jhipster">
        <createTable tableName="loan_duration_iteration">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="create_date" type="timestamp">
                <constraints nullable="true" />
            </column>
            
            <column name="iteration_index" type="integer">
                <constraints nullable="true" />
            </column>
            
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="loan_duration_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="loan_duration_iteration" columnName="create_date" columnDataType="datetime"/>
        
        <createTable tableName="loan_duration_iteration_payment">
            <column name="payments_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="loan_duration_iterations_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="loan_duration_iterations_id, payments_id" tableName="loan_duration_iteration_payment"/>
        
    </changeSet>
</databaseChangeLog>
